import random
import math

level = 1
hp = 0
hpmax = 100
dp = 10
xp = 0
xpmax = 100
diff = 20
monsterhp = 0
monsterdp = 0
levelup = 50*2**level
score = level + xp/levelup

def levelup():
    level += 1
    hpmax += 20
    dp += 5
    hp = hpmax

def monster():
    global monsterhp
    global monsterdp
    monsterhp = random.randint(diff, 2*diff)
    monsterdp = random.randint(diff/4, diff/2)
    
def fight():
    global monsterhp
    global hp
    while monsterhp > 0 and hp > 0:
        monsterhp -= dp
        if monsterhp <= 0:
            monsterhp = 0
            return True
        else:
            hp -= monsterdp
        if hp <= 0:
            hp = 0
            return False
        print("Hero attacks. Monster hp=", monsterhp,"Monster attacks. Your hp=%.2f" %hp, "diff=", diff)

def exit():
    global score
    if hp < 0:
        return "Game over. Your score is:%.2f" %score
