import random
import math

level = 1
hp = 0
hpmax = 100
dp = 10
xp = 0
diff = 20
monsterhp = 0
monsterdp = 0
score = level + xp/levelup


def levelup():
    level += 1
    hpmax += 20
    dp += 5
    hp = hpmax
    xpmax = 50 * 2 ** level
    print("You leveled up! Your HP now is %d and your DP is %d" % (hp, dp))

def monster():
    global monsterhp
    global monsterdp
    global mosterhpmax
    monsterhp = random.randint(diff, 2*diff)
    monsterhpmax = monsterhp
    monsterdp = random.randint(diff/4, diff/2)
    
def fight():
    global monsterhp
    global hp
    global xp
    while monsterhp > 0 and hp > 0:
        monsterhp -= dp
        print("Hero attacks: Monster %d/%d HP" % (monsterhp, max(monsterhpmax, 0)))
        if monsterhp <= 0:
            monsterhp = 0
            return True
            
        else:
            hp -= monsterdp
            print("Monster attacks: Your %d/%d HP" % (hp, max(hpmax, 0)))
        if hp <= 0:
            hp = 0
            return False
        

def exit():
    global score
    if hp < 0:
        return "Game over. Your score is:%.2f" %score
